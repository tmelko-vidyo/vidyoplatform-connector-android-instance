<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="top"
        app:title="@string/app_name" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="@dimen/brand_icon_size"
        android:layout_height="@dimen/brand_icon_size"
        android:src="@drawable/brand_logo"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/home_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/material_margin"
        android:onClick="onConnectRequested"
        android:text="@string/connect_with_activity"
        android:visibility="visible" />

    <Button
        android:id="@+id/home_connect_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/material_margin"
        android:onClick="onConnectFragmentRequested"
        android:text="@string/connect_with_fragment"
        android:visibility="visible" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>