<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/semi_trans"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/call_control"
            style="@style/ControlButton"
            android:src="@drawable/call_start"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/camera_control"
            style="@style/ControlButton"
            android:src="@drawable/camera_on"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mic_control"
            style="@style/ControlButton"
            android:src="@drawable/microphone_on"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/speaker_control"
            style="@style/ControlButton"
            android:src="@drawable/speaker_on"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/switch_control"
            style="@style/ControlButton"
            android:src="@drawable/camera_switch"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/more_control"
            style="@style/ControlButton"
            app:srcCompat="@drawable/vector_up"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_settings_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/more_debug"
            style="@style/ControlButton"
            app:srcCompat="@drawable/vector_debug_on"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/more_send_logs"
            style="@style/ControlButton"
            app:srcCompat="@drawable/vector_send_logs"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/library_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_margin"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        tools:text="Library version" />
</LinearLayout>
